<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Mapa interactivo de transporte y turismo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@android:color/white">

        <FrameLayout
            android:id="@+id/bottom_sheet_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/bottom_sheet_content" />

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/map_style_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|start"
        android:src="@android:drawable/ic_menu_mapmode"
        android:contentDescription="Cambiar vista 2D/3D"
        app:elevation="6dp"
        app:hoveredFocusedTranslationZ="8dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/white"
        app:fabSize="mini"
        android:translationY="-40dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|end"
        android:src="@android:drawable/ic_menu_mylocation"
        android:contentDescription="Centrar en mi ubicaciÃ³n"
        android:translationY="-40dp"
        app:elevation="6dp"
        app:hoveredFocusedTranslationZ="8dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>