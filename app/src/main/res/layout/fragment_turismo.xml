<?xml version="1.0" encoding="utf-8"?>
<!-- Replaced NestedScrollView with FrameLayout for better performance and loading/empty states -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TurismoFragment">

    <!-- Enhanced RecyclerView with padding and clipToPadding -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_turismo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="vertical"
        android:contentDescription="Lista de puntos turísticos"
        tools:listitem="@layout/item_punto_turistico" />

    <!-- Loading state -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:contentDescription="Cargando puntos turísticos" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@android:drawable/ic_dialog_info"
            android:alpha="0.3"
            android:contentDescription="Sin puntos turísticos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No hay puntos turísticos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Explora el mapa para descubrir lugares"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

</FrameLayout>
