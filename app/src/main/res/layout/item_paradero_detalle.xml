<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced with MaterialCardView and better visual hierarchy -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:minHeight="56dp">

        <!-- Enhanced chip with Material styling -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="?attr/colorPrimary">

            <TextView
                android:id="@+id/stop_sequence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:contentDescription="Número de secuencia del paradero"
                tools:text="P-229" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Stop name with better typography -->
        <TextView
            android:id="@+id/stop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Nombre del Paradero" />

        <!-- Este es el nuevo botón "Cómo Llegar" -->
        <Button
            android:id="@+id/btnGetDirectionsToStop"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:text="Cómo Llegar" />

        <ImageButton
            android:id="@+id/btn_favorite_paradero"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Marcar paradero como favorito"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
